<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pill_box"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Pill_Box" >
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.EditarCitas"
            android:exported="false" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.EditarPastilla"
            android:exported="false" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.Ayuda"
            android:exported="false" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.ActividadPastillero"
            android:exported="true" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.MostradorPastillas"
            android:exported="true" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.Informacion"
            android:exported="true" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.ActividadCitero"
            android:exported="false" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.ActividadCalendario"
            android:exported="false" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.ActividadCreadorCitas"
            android:exported="true" />
        <activity
            android:name="com.pastillasCreator.pill_box.creadorElementosCalendario.PastillasCreador"
            android:exported="true" />
        <activity
            android:name="com.pastillasCreator.pill_box.actividades.ActividadMain"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Pill_Box.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.pill_box.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />
    </application>

</manifest>